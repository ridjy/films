{% extends 'base.html.twig' %}

{% block title %}Ma page!{% endblock %}

{% block body %}
    <header class="bg-white">
        <div class="container d-flex justify-content-between align-items-center py-3">
        <div class="logo">
            <img src="logo.png" alt="Logo" width="50">
        </div>
        <div class="search-bar rounded-pill bg-light px-3 py-1">
            <input type="text" class="form-control border-0 bg-transparent" placeholder="Recherche">
        </div>
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="darkModeSwitch">
            <label class="form-check-label" for="darkModeSwitch">Mode sombre</label>
        </div>
        </div>
    </header>

    <div class="container py-5">
        <div class="row">
        <div class="col-md-4">
            <img src="image.jpg" alt="Image" class="img-fluid">
        </div>
        <div class="col-md-8">
